@model SmartDb4.Models.LocalPasswordModel

@*<h4>Change password</h4>*@

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2 labelfont">Current Password</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OldPassword)
                @Html.ValidationMessageFor(model => model.OldPassword)
            </div>            
        </div>
        <div class="form-group">
            <span class="control-label col-md-2 labelfont">New Password</span>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
        </div>
        <div class="form-group">
            <span class="control-label col-md-2 labelfont">Confirm new password</span>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-offset-2" style="margin-bottom: 10px;">
                <button type="submit" class="btn btn-success">Change password</button>
            </div>
        </div>
    </div>
    
